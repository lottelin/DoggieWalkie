<div class="signin">
  <div class="signinheader">
    <%= image_tag("logo_doghead.png", :alt => "Dog", :class =>"signin-doghead") %>
    <div class="signin-logo-text">
      <%= image_tag("Doggie_Walkie_Logo.png", :alt => "DoggieWalkie") %>
    </div>
  </div>


  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  label:false,
                  required: false,
                  placeholder:"email",
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  label:false,
                  required: false,
                  placeholder:"password",
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign in",  id: "sign-in" %>
    </div>
  <% end %>

  <div class="sign-up">
    <p>New Comer? Join us!</p>
    <%= link_to "Sign up", new_registration_path(resource_name),  id: "sign-up" %>
  </div>
</div>
