<div class="chat_room">
  <div class="row chat_room">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="chat-header"><%= @chat_room.messages.first.receiver.dog.name %> and <%= @chat_room.messages.first.sender.dog.name %> are chatting...
      </div>
        <div class="messages">
          <% @chat_room.messages.each do |message| %>
            <%= render "message", message: message %>
          <% end %>
        </div>
        <div id="create-message">
          <%= simple_form_for [ @chat_room, Message.new ] do |f| %>
            <%= f.input :content, label: false %>
            <%= f.submit 'send', class: 'btn btn-primary'  %>
          <% end %>
        </div>
        <% @chat_room.messages.each do |message| %>
          <% if message.content.downcase.include?("bye") %>
            <div id="end-point-button">
              <%= link_to 'Ready, Set, DoggieWalk! 🎉', endpoint_path, :class => "btn btn-primary"%>
            </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
